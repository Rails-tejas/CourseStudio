<style>
.navbar-custom {
  background: linear-gradient(
    135deg,
    rgba(24, 188, 156, 0.85),
    rgba(26, 188, 156, 0.7)
  ); 
  backdrop-filter: blur(15px); 
  -webkit-backdrop-filter: blur(15px);
  border-radius: 25px;
  padding: 0.25rem 1.5rem; /* reduced padding */
  box-shadow: 0 6px 20px rgba(0,0,0,0.25); 
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 1200px;
  transition: all 0.4s ease-in-out;
  z-index: 1050;
}

.navbar-custom .navbar-brand {
  color: #f0f8f5 !important;
  font-weight: bold;
  font-size: 1.25rem; /* slightly smaller */
  transition: transform 0.3s ease, color 0.3s ease;
}

.navbar-custom .navbar-brand:hover {
  transform: scale(1.05); /* smaller hover scale */
  color: #ffffff !important;
}

.navbar-custom .nav-link {
  color: #f0f8f5 !important; 
  font-weight: 500;
  font-size: 0.9rem; /* slightly smaller */
  transition: background 0.3s ease, color 0.3s ease;
  padding: 0.35rem 0.75rem; /* less padding */
  border-radius: 20px;
}

.navbar-custom .nav-link:hover {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff !important;
}

.navbar-custom .form-control {
  border: none;
  border-radius: 25px 0 0 25px;
  background: rgba(255,255,255,0.2);
  color: #ffffff;
  height: 32px; /* thinner input */
  font-size: 0.85rem;
}

.navbar-custom .form-control::placeholder {
  color: rgba(255,255,255,0.8);
  font-size: 0.85rem;
}

.navbar-custom .btn-search {
  background-color: rgba(255,255,255,0.3);
  color: #ffffff;
  border-radius: 0 25px 25px 0;
  transition: background 0.3s ease, color 0.3s ease;
  height: 32px; /* match input */
  font-size: 0.85rem;
}

.navbar-custom .btn-search:hover {
  background-color: #ffffff;
  color: #18bc9c !important;
}

.navbar-custom .btn-outline-light {
  border-color: rgba(255,255,255,0.7);
  color: #ffffff;
  font-size: 0.85rem;
  padding: 0.25rem 1rem;
  transition: all 0.3s ease;
}

.navbar-custom .btn-outline-light:hover {
  background-color: #ffffff;
  color: #18bc9c !important;
  border-color: #ffffff;
}

.navbar-toggler {
  border: 1px solid rgba(255,255,255,0.7);
  padding: 0.25rem 0.5rem;
}

.navbar-toggler-icon {
  filter: invert(1);
}

@media (max-width: 768px) {
  .navbar-collapse {
    background: rgba(24, 188, 156, 0.9);
    backdrop-filter: blur(15px);
    border-radius: 15px;
    padding: 0.75rem;
    margin-top: 10px;
  }
  .navbar-custom .nav-link {
    padding: 0.35rem 0.5rem;
    font-size: 0.85rem;
  }
}
</style>



<nav class="navbar navbar-expand-lg navbar-custom fixed-top shadow-sm">
  <div class="container-fluid px-4 py-2">

   
    <%= link_to root_path, class: "navbar-brand fw-bold fs-4" do %>
      CourseStudio<span style="color: #ecf0f1;">{ }</span>
    <% end %>

    
    <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarContent">

      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link px-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "Courses", courses_path, class: "nav-link px-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link px-2" %>
        </li>
        <% if user_signed_in? && current_user.profile.present? %>
          <li class="nav-item">
            <%= link_to "Profile", profile_path(current_user.profile.id), class: "nav-link px-2" %>
          </li>
        <% end %>
        
        <% if user_signed_in? && current_user.admin? %>
        <li class="nav-item">
          <%= link_to "Admin", "/admin" ,class: "nav-link px-2"%>
        </li>
        <% end %>
        
      </ul>

   
      <div class="d-flex align-items-center me-3">
        <%= form_with url: courses_path, method: :get, local: true, class: "d-flex" do %>
          <div class="input-group">
            <%= text_field_tag :q, params[:q], placeholder: "Search courses...", class: "form-control shadow-sm" %>
            <button class="btn btn-search shadow-sm" type="submit">
              <i class="bi bi-search"></i>
            </button>
          </div>
        <% end %>
      </div>
      <br>
    
      <div class="d-flex align-items-center gap-2">
        <% if user_signed_in? %>
          <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-light px-4 rounded-pill shadow-sm", form_class: "m-0" do %>
            Logout
          <% end %>
        <% else %>
          <%= 
          link_to "Login", new_user_session_path, class: "btn btn-outline-light px-4 rounded-pill shadow-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

