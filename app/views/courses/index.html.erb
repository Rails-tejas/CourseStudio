<style>
  .course-grid-card {
    border-radius: 16px;
    overflow: hidden;
    background: linear-gradient(to bottom, #f9fdfc, #e9f7f6);
    transition: all 0.3s ease;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .course-grid-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
  }

  .course-grid-card img {
    height: 180px;
    object-fit: cover;
    border-bottom: 1px solid #dee2e6;
  }

  .course-card-body {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .course-title {
    font-weight: 600;
    font-size: 1.05rem;
    color: #2c3e50;
    margin-bottom: 4px;
  }

  .course-desc {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 12px;
  }

  .course-meta {
    font-size: 0.75rem;
    color: #999;
  }

  .btn-course-view {
    margin-top: auto;
    align-self: flex-start;
    border-radius: 20px;
    background-color: #2c3e50;
    color: #fff;
    padding: 6px 16px;
    font-size: 0.85rem;
    font-weight: 500;
    border: none;
  }

  .btn-course-view:hover {
    background-color: #18bc9c;
    color: white;
  }
</style>

<div class="container pt-5 mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">Explore Courses</h2>
    <% if user_signed_in? %>
      <%= link_to "New Course", new_course_path, class: "btn btn-success rounded-pill" %>
    <% end %>
  </div>
  
<hr>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @courses.each do |course| %>
      <div class="col">
        <div class="course-grid-card">
          <%= image_tag course_thumbnail(course), class: "w-100", alt: course.title %>
          <div class="course-card-body">
            <%= "â˜…" * 4 %><span class="text-muted"> (100)</span>
            <div class="course-title"><%= truncate(course.title, length: 50) %></div>
            <div class="course-desc"><%= truncate(course.description, length: 70) %></div>
            <%= link_to "View", course_path(course), class: "btn btn-course-view" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

