<div class="container">
  <h2>Your Profile</h2>

  <% if @profile.present? %>
    <%= render @profile %>
    <%= link_to 'Edit Profile', edit_profile_path, class: "btn btn-primary mt-2" %>
  <% else %>
    <%= link_to 'Create Profile', new_profile_path, class: "btn btn-success" %>
  <% end %>
</div>